<p>
  <strong>Title:</strong>
  <%= @total_sum.title %>
</p>

<p>
  <strong>For What:</strong>
  <%= @total_sum.for_what %>
</p>

<p>
  <strong>Count:</strong>
  <%= @total_sum.count %>
</p>
<% if user_signed_in? %>
<hr>
<h4>Add new check</h4>
  <%= render 'checks/form', total_sum_id: @total_sum.id %>
<% end %>
<hr>

<div class="checks">
  <h4>All checks</h4>
  <table>
    <thead>
    <tr>
      <th>Title </th>
      <th>Body</th>
      <th>Cost</th>
      <th colspan="3"></th>
    </tr>
    </thead>
    <tbody>
    <% @total_sum.checks.each do |check| %>
      <tr>
        <td><%= check.title %></td>
        <td><%= check.body %></td>
        <td><%= check.cost %></td>
        <td><hr></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>

<%= link_to 'Edit', edit_total_sum_path(@total_sum) %> |
<%= link_to 'Back', total_sums_path %>