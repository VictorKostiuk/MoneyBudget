<button type="button" class="btn btn-dark" data-bs-toggle="modal" data-bs-target="#mySecondModal">
  Create Transaction
</button>

<div class="modal fade" id="mySecondModal" aria-hidden="true" aria-labelledby="ModalLabel" tabindex="-1">
  <div class="modal-dialog modal-dialog modal-xl modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="ModalLabel"><strong>Creating Transaction</strong></h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= render 'transactions/form', account_id: @account.id %>
      </div>
    </div>
  </div>
</div>
