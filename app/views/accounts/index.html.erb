<% if user_signed_in? %>
  <h1>Accounts</h1>

  <div class="accounts">
    <% @accounts.each do |account| %>
      <% if account.user_id != current_user.id %>
        <% else %>
      <article class="card text-white bg-dark my-3">
        <section class="card-header">
          <h3><%= link_to account.title, account_path(account), class: 'text-white', style: "text-decoration: none;" %></h3>
        </section>
        <div class="card-body">
          <section class="card-text">
            <p class="my-2">
              <%= truncate strip_tags(account.for_what), length: 150 %>
            </p>
          </section>
          <div style="display: flex;" class="mt-3">
            <% if user_signed_in? %>
              <%= link_to 'Edit', edit_account_path(account), class: 'btn btn-dark mx-2' %>
              <%= button_to 'Destroy', account, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
            <% end %>
          </div>
        </div>
      </article>
      <% end %>
    <% end %>
  </div>

  <br>

  <%= link_to 'New Account', new_account_path, class: 'btn btn-dark' %>
<% end %>
