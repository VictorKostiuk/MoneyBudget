<%= form_with(model: [@account, @transaction]) do |form| %>
  <% if @transaction&.errors&.full_messages&.any? %>
    <div class="alert alert-danger">
      <ul class="mb-0">
        <% @transaction.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3 row">
    <div class="col-sm-1 col-form-label">
      <strong><%= form.label :title %></strong>
    </div>

    <div class="col-sm-9">
      <%= form.text_field :title, autocomplete: "Title", class: 'form-control form-control-lg shadow-lg bg-body rounded' %>
    </div>
  </div>
  <br>
  <div class="mb-3 row">
    <div class="col-sm-1 col-form-label">
      <strong><%= form.label :body %></strong>
    </div>

    <div class="col-sm-9">
      <%= form.text_field :body, autocomplete: "Body", class: 'form-control form-control-lg  shadow-lg bg-body rounded ' %>
    </div>
  </div>
  <br>
  <div class="mb-3 row">
    <div class="col-sm-1 col-form-label">
      <strong><%= form.label :cost %></strong>
    </div>

    <div class="col-sm-9">
      <%= form.number_field :cost, autocomplete: "Cost", class: 'form-control form-control-lg  shadow-lg bg-body rounded '  %>
    </div>
  </div>
  <br>

  <div class="mb-3 row">
    <div class="col-sm-1 col-form-label">
      <strong><%= form.label :date_of_creating %></strong>
    </div>

    <div class="col-sm-9">
      <%= form.number_field :date_of_creating, type: "date", id: "start",
          min: "2018-01-01", max: "2022-12-31", class: 'form-control form-control-lg  shadow-lg bg-body rounded '  %>
    </div>
  </div>
  <br>

  <div class="mb-3 row">
    <div class="col-sm-1 col-form-label">
      <strong><%= form.label :category %></strong>
    </div>

    <div class="col-sm-9">
      <%= form.collection_select :category_id, Category.all, :id, :name, {}, class: 'form-control form-control-lg shadow-lg bg-body rounded ' %>
    </div>
  </div>
  <br>

  <div class="mb-3 row">
    <div class="col-sm-1 col-form-label">
      <strong><%= form.label :Type %></strong>
    </div>

    <div class="col-sm-9">
      <%= form.collection_select :type_id, Type.all, :id, :name, {}, class: 'form-control form-control-lg shadow-lg bg-body rounded ' %>
    </div>
  </div>
  <br>

  <div class="form-group">
    <% if @transaction.image.attached? %>
      <%= image_tag @transaction.image, style: "width: 200px; display: block " %>
    <% end %>
    <div class="mb-3 row">
      <div class="col-sm-1 col-form-label">
        <strong><%= form.label :image %></strong>
      </div>

      <div class="col-sm-9">
        <%= form.file_field :image, autocomplete: "Cost", class: 'form-control form-control-lg  shadow-lg bg-body rounded '  %>
      </div>
    </div>
    <br>
  </div>
  <div class="actions">
    <%= form.submit class: 'btn btn-dark' %>
  </div>
<% end %>