
<div class="transactions row mt-3">
  <% if current_user %>
    <table class="table">
      <thead>
      <tr class="table-dark">
        <th scope="col">#</th>
        <th scope="col">Title</th>
        <th scope="col">Cost</th>
        <th scope="col">Category</th>
        <th scope="col">Account</th>
        <th scope="col">Type</th>
        <th scope="col">Show | Edit</th>
      </tr>
      </thead>
      <tbody>
      <% current_user.transactions.each do |transaction| %>
        <tr class="<%= type_of_transaction(transaction)%>">
        <th scope="row"><%= transaction.id %></th>
        <td><%= transaction.title.capitalize %></td>
        <td><%= transaction.cost %></td>
        <td><%= link_to transaction.category.name, category_path(transaction.category), class: 'text-dark table-button' %></td>
        <td><%= link_to transaction.account.title, account_path(transaction.account), class: 'text-dark table-button' %></td>
        <td><%= transaction.type.name %></td>
        <td><%= link_to 'Show', transaction_path(transaction), class: 'text-dark', style: "text-decoration: none;" %> |
          <%= link_to 'Edit', edit_transaction_path(transaction), class: 'text-dark', style: "text-decoration: none;" %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  <% end %>
</div>